
@{
    ViewData["Title"] = "List";
}

@model List<Person>

@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert @ViewBag.Type" role="alert" id="divAlert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Success!</strong> @ViewBag.Message
    </div>

    <script>
        window.setTimeout(function () {
            $(".alert").fadeTo(500, 0).slideUp(500, function () {
                $(this).remove();
            });
        }, 2000);
    </script>
}

<h3 style="margin-top: 25px;">List People</h3>
<hr />

<table class="table table-dark table-bordered table-hover table-responsive-sm" style="text-align:center;" width="100%" border="1">
    <thead>
        <tr>
            <th>Name</th>
            <th>Birthday</th>
            <th>Age <sup>Year(s)</sup></th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.FirstName @person.Surname</td>
                <td>@person.Birthday.ToShortDateString()</td>
                <td>@person.Age</td>
                <td>
                    <a class="btn btn-outline-warning btn-sm" href="/Person/Update?id=@person.Id">Edit</a>
                    <a class="btn btn-outline-danger btn-sm" href="/Person/Delete?id=@person.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
